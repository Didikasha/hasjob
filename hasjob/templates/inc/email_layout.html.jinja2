{% block stylesheet -%}
<style type="text/css">
  .btn, a.btn:link, a.btn:visited {
    background-color: #816894;
    border-color: #816894;
    border-bottom: 2px solid #554562;
    padding: 0 15px;
    color: #fff;
    margin: 0 15px;
  }
  .board-title {
    display: inline-block;
    color: #df5e0e;
    font-size: 25px;
    vertical-align: top;
    margin-top: 9px;
  }
  .board-caption {
    display: inline-block;
    color: #816894;
    font-size: 17px;
    vertical-align: top;
    margin-top: 16px;
  }
  .wrapper {
    background-color: #e9e6e3;
    background-image: url("{{ url_for('static', filename='img/envelope.png', _external=true) }}"), url("{{ url_for('static', filename='img/envelope.png', _external=true) }}");
    padding: 15px 15px 120px;
    background-position: 0 25%, 0 75%;
    background-repeat: repeat-x;
    background-size: 82px;
  }
  .title {
    display: block;
    min-width: 250px;
    width: 70%;
    margin: 0 auto 12px;
    text-decoration: none;
  }
  .hasjob-logo {
    height: 38px;
    margin: 0 5px 0 0;
  }
  .box {
    min-width: 250px;
    width: 70%;
    padding: 30px 30px 0;
    border-radius: 2px;
    background-color: #ffffff;
    border: solid 1px rgba(118, 118, 118, 0.27);
    margin: auto;
  }
  .address,
  .copyright {
    font-size: 12px;
    text-align: center;
    color: #666666;
  }
</style>
{%- endblock %}

{% block content %}
  <div class="wrapper">
    <a href="hasjob.co" class="title"><img src="https://hasjob.co/static/img/hasjob-logo.svg" class='hasjob-logo' alt="hasjob"><span class="board-title">Hasjob</span> <small class="board-caption">The HasGeek Job Board</small>
    </a>
    <div class="box">
      {% block innercontent %}
      {% endblock %}
    </div>
    <p class="address">Our mailing address is:<br>
      HasGeek, #2699, 5th Cross, HAL 2nd Stage, Indira Nagar, Bangalore, 560008, India</p>
    <p class="copyright">Copyright Â© 2018 HasGeek, All rights reserved.</p>
  </div>
{% endblock %}
